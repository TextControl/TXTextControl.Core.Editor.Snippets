@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5 mb-3">

<div class="row">
    <div class="col-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Snippets</h5>
                <p class="card-text">Get an overview of existing snippets. This section can be used to create and modify snippets.</p>
                <a asp-controller="Snippets" asp-action="Index" class="btn btn-primary">Overview</a>
            </div>
        </div>
    </div>
        <div class="col-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Document Builder</h5>
                    <p class="card-text">Create new documents based on created snippets. The builder can be also used to create new snippets.</p>
                    <a asp-controller="Builder" asp-action="Index" class="btn btn-primary">Document Builder</a>
                </div>
            </div>
        </div>
</div>

</div>